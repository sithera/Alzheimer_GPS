<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="pl.soad.alzheimer_gps.GpsActivity">
    
<RelativeLayout     
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/gps_tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/list_row_grey" >
        
        <TextView 
            android:id="@+id/gps_TextView1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gps_t1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>
        
    </TableRow>
        
    <TableRow
        android:id="@+id/gps_tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/gps_tableRow1"
        android:background="@drawable/list_row_grey" >
        
        <TextView
            android:id="@+id/gps_TextView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gps_t3"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
        
    </TableRow>
    
    <TableRow
        android:id="@+id/gps_tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:layout_below="@+id/gps_tableRow2"
		android:background="@drawable/list_row_grey" >
        
        <TextView
            android:id="@+id/gps_TextView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gps_t2"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
        
    </TableRow>
    <TableRow
        android:id="@+id/gps_tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:layout_below="@+id/gps_tableRow3"
		android:background="@drawable/list_row_grey" >
        
        <TextView 
            android:id="@+id/gps_TextView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gps_t4"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        
    </TableRow>    
 	<Button
        android:id="@+id/gps_btn1"
        android:background="@drawable/button_red"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/gps_tableRow4"
        android:layout_marginTop="10dp"
        android:text="@string/main_j1"
        style = "@style/ButtonText" />

</RelativeLayout>
</ScrollView>
