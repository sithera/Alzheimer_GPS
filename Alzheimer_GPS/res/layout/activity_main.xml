<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.soad.alzheimer_gps.MainActivity"
    android:background="@drawable/background" >
    
 		<TextView
 		    android:id="@+id/app_name"
 		    android:layout_width="fill_parent"
 		    android:layout_height="wrap_content"
 		    android:text="Alzheimer GPS"
 		    android:gravity="center"
 		    android:textColor="#FFFFFF"
 		    android:textSize="30sp"
 		    android:textStyle="bold" /> 
 		    
 		<Button
        android:id="@+id/btn_turnonoff"
        android:background="@drawable/button_red"
        android:layout_above="@+id/btn_contacts"
        android:layout_marginTop="10dp"
        android:text="Włącz śledzenie"
        style = "@style/ButtonText" />

 		<Button
        android:id="@+id/btn_contacts"
        android:background="@drawable/button_red"
        android:layout_above="@+id/btn_settings"
        android:layout_marginTop="10dp"
        android:text="Osoby kontaktowe"
        style = "@style/ButtonText" />
 		
 		<Button
        android:id="@+id/btn_settings"
        android:background="@drawable/button_red"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:text="Ustawienia"
        style = "@style/ButtonText" />



</RelativeLayout>
